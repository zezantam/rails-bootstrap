<% content_for :title do %>Rails Bootstrap<% end %>
<% content_for :description do %>Rails Bootstrap Example<% end %>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
		<li data-target="#myCarousel" data-slide-to="2"></li>
	</ol>
	<div class="carousel-inner">
		<div class="item active">
			<img src="http://lorempixel.com/1170/800/city/9">
			<div class="carousel-caption text-center">
				<h4><%= Visitor::IMAGE_LABELS[0] %></h4>
			</div>
		</div>
		<div class="item">
			<img src="http://lorempixel.com/1170/800/city/7">
			<div class="carousel-caption text-center">
				<h4><%= Visitor::IMAGE_LABELS[1] %></h4>
			</div>
		</div>
		<div class="item">
			<img src="http://lorempixel.com/1170/800/city/6">
			<div class="carousel-caption text-center">
				<h4><%= Visitor::IMAGE_LABELS[2] %></h4>
			</div>
		</div>
	</div>
	<a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
	<a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></a>
</div>
<div class="text-center">
	<br />
	<div id="modal-form" class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: <%= @visitor.errors.any? ? 'block' : 'none';%>" >
		<div class="modal-dialog">
			<div class="modal-content">
				<%= simple_form_for @visitor do |f| %>
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						<h4 class="modal-title" id="myModalLabel">Select a City</h4>
					</div>
					<div class="modal-body">
						<div class="container">
							<div class="row">
							ï¿¼ <div class="col-md-4 col-md-offset-1">
									<%= f.error_notification %>
									<%= f.input :favorite, :collection => Visitor::IMAGE_LABELS, label: false, as: :select, prompt: 'Select a favorite...' %>
								</div>
							</div>
							<div class="row">
								<div class="col-md-4 col-md-offset-1">
									<%= f.input :comment, label: false, :placeholder => 'Add a comment...', :class => "col-md-12" %>
								</div>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<%= f.submit "Choose!", :class => "btn btn-primary" %>
							<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div id="call-to-action">
		<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" href="#modal-form">Choose!</button>
	</div>
</div>
